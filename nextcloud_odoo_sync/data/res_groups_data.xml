<odoo>
	<record model="ir.module.category" id="ir_module_nextcloud_sync">
           <field name="name">Nextcloud Sync</field>
           <field name="visible" eval="0" />
       </record>

       <!-- Nextcloud sync User -->
	<record id="res_group_nextcloud_sync_user" model="res.groups">
		<field name="name">Sync User</field>
		<field name="category_id" ref="ir_module_nextcloud_sync"/>
	</record>

	<!-- Nextcloud sync Admin -->
	<record id="group_nextcloud_sync_admin" model="res.groups">
		<field name="name">Sync Admin</field>
		<field name="category_id" ref="ir_module_nextcloud_sync"/>
		<field name="implied_ids" eval="[(4,ref('res_group_nextcloud_sync_user')),]"/>
		<field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
	</record>
</odoo>
